extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				form(class='form-signin', action='/addCourse', method='POST')
					input(type='text', name='courseName' class='form-control', placeholder='Course Name',required, autofocus)
					input(type='text', name='courseCode' class='form-control', placeholder='Course Code', required)
					button(class='btn btn-lg btn-primary btn-block', type='submit') Sign in
					span.clearfix
						a(href='/signout', class='text-center new-account') Sign Out
